<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalizarDispositivos.Views.PaginaGrid">
    <ContentPage.Content>
        <Grid BackgroundColor="White">
            <!--DEFINIMOS LAS FILAS-->
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--INCLUIR EL CONTENIDO DEL GRID-->
            <StackLayout Grid.Row="0" BackgroundColor="Yellow"></StackLayout>
            <Button Grid.Row="1" Text="Boton en fila 1"/>
            <Grid Grid.Row="2" BackgroundColor="Aqua">
                <!--DECLARAMOS LAS COLUMNAS PARA EL GRID-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0" BackgroundColor="Blue"></StackLayout>
                <StackLayout Grid.Column="1" BackgroundColor="Gold"></StackLayout>
                <StackLayout Grid.Column="2" BackgroundColor="Blue"></StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>